@model List<Video>
@{
    Layout = "~/Views/Shared/Student/_StudentLayout.cshtml";
}


<div class="container">
    <br />

    <h1>@ViewBag.CourseName</h1>

    <br />
    <a class="btn btn-outline-danger" href="/Student/ListUserCourse/"> Geri</a>

    <hr />






    <div>

        @if (Model.Count == 0)
        {
            <div class="alert alert-danger" role="alert">
                Bu kursun içeriği bulunmamaktadır.
            </div>

        }
        else
        {


            <table class="table table-striped">
                <tr>
                    <th>#</th>
                    <th>Video</th>
                    <th>Ders Adı</th>
                   
                </tr>

                @{
                    int a = 1;
                }
                @foreach (var i in Model){

                    <tr>
                        <th>@a</th>
                        <td>
                            <iframe width="300"
                                    src="@i.VideoUrl"
                                    title="YouTube video player"
                                    frameborder="0" allow="accelerometer; autoplay;
                                clipboard-write; encrypted-media;
                                gyroscope; picture-in-picture; web-share"
                                    allowfullscreen>
                            </iframe>
                        </td>
                        <td>@i.VideoName</td>
                      
                       
                    </tr>

                    a++;
                }
            </table>


        }

    </div>
</div>

